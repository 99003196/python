class validation:

    def lower(self):
        lower_case = any(char.islower() for char in self.passcode)
        return lower_case

    def upper(self):
        upper_case = any(char.isupper() for char in self.passcode)
        return upper_case

    def number(self):
        num = any(char.isdigit() for char in self.passcode)
        return num

    def spl(self):
        sym = any['!', '@', '#', '$', '%', '&', '*', '?']


